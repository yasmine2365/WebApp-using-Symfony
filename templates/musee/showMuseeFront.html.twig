        let carte = L.map('map').setView([museeLat, museeLon], 13);

        // Ajoutez une couche de tuiles
        L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
            minZoom: 1,
            maxZoom: 20,
            name: 'tiles'
        }).addTo(carte);

        // Ajoutez un marqueur √† la localisation du mus√©e
        L.marker([museeLat, museeLon]).addTo(carte);
    </script>
