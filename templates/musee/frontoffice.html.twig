<script type="text/javascript">
$(document).ready(function(){
    // Fonction de recherche
    function searchMuseums() {
        var searchTerm = $('#live_search').val().toLowerCase(); // R√©cup√©rer le terme de recherche et le convertir en minuscules
        $('.museum-item').each(function(){
            var museumName = $(this).find('h4').text().toLowerCase(); // R√©cup√©rer le nom du mus√©e et le convertir en minuscules
            if(museumName.includes(searchTerm)){ // V√©rifier si le nom du mus√©e contient le terme de recherche
                $(this).show(); // Afficher l'√©l√©ment du mus√©e
            } else {
                $(this).hide(); // Masquer l'√©l√©ment du mus√©e s'il ne correspond pas au terme de recherche
            }
        });
    }

    // Lorsque l'utilisateur saisit quelque chose dans l'entr√©e de recherche
    $('#live_search').on('input', function(){
        searchMuseums(); // Appeler la fonction de recherche
    });

    // Lorsque l'utilisateur clique sur le bouton de recherche
    $('#search_button').on('click', function(){
        searchMuseums(); // Appeler la fonction de recherche
    });
});
$(document).ready(function(){
    // Fonction pour trier les mus√©es par nom
    function sortByName() {
        var sortedItems = $('.museum-item').sort(function(a, b) {
            var nameA = $(a).find('h4').text().toLowerCase();
            var nameB = $(b).find('h4').text().toLowerCase();
            return nameA.localeCompare(nameB);
        });
        $('.museum-list').html(sortedItems); // Remplacer les √©l√©ments tri√©s dans la liste
    }

    // Fonction pour trier les mus√©es par nombre de tickets disponibles
    function sortByTickets() {
        var sortedItems = $('.museum-item').sort(function(a, b) {
            var ticketsA = parseInt($(a).data('tickets'));
            var ticketsB = parseInt($(b).data('tickets'));
            return ticketsB - ticketsA;
        });
        $('.museum-list').html(sortedItems); // Remplacer les √©l√©ments tri√©s dans la liste
    }

    // Lorsque l'utilisateur change l'option de tri
    $('#sort_select').on('change', function() {
        var sortBy = $(this).val(); // R√©cup√©rer la valeur s√©lectionn√©e
        if (sortBy === 'name') {
            sortByName(); // Trier les mus√©es par nom
        } else if (sortBy === 'tickets') {
            sortByTickets(); // Trier les mus√©es par nombre de tickets disponibles
        }
    });
});


</script>
